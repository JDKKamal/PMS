<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            android:layout_marginRight="@dimen/small"
            android:layout_marginTop="@dimen/small"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appTvOrderID"
                style="@style/TextSemiBoldSizeRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:text="@string/order_id"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium_text" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/appTvOrderID"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorFloatingBackground"
                android:src="@mipmap/ic_profile"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="mini"
                app:layout_behavior="com.jdkgroup.customviews.FloatingActionButtonBehavior" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            app:cardBackgroundColor="@color/colorCardViewBackground"
            app:cardCornerRadius="@dimen/extraTiny"
            app:cardElevation="@dimen/extraTiny"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/appIvImagePurchase"
                                android:layout_width="@dimen/dimen_product"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@color/colorPrimary"
                                android:padding="@dimen/extraTiny" />

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="@dimen/huge"
                                android:layout_height="@dimen/huge"
                                android:layout_centerInParent="true"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/small">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/appTvCompanyName"
                                    style="@style/TextSemiBoldSizeRegular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="@string/company_name"
                                    android:textColor="@color/colorBlack" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/appTvProductName"
                                    style="@style/TextRegularSizeMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:maxLines="1"
                                    android:text="@string/category_name"
                                    android:textColor="@color/colorBlack" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/appTvPrice"
                                    style="@style/TextRegularSizeMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:maxLines="1"
                                    android:text="Product Name"
                                    android:textColor="@color/colorBlack" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/medium_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="@dimen/large"
                                android:text="@string/date"
                                android:textColor="@color/colorCheckBoxActive" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvTotalPrice"
                                style="@style/TextRegularSizeMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹ Price"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/medium_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/appTvItems"
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/large"
                                android:background="@drawable/style_app_edittext_add_to_cart"
                                android:padding="@dimen/small"
                                android:text="Items"
                                android:textAlignment="center"
                                android:textColor="@color/colorCheckBoxActive" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRatingBar
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5"
                            android:theme="@style/RatingBarTheme" />

                        <android.support.v7.widget.AppCompatButton
                            style="@style/ButtonTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/extraLarge"
                            android:layout_gravity="center"
                            android:padding="@dimen/small"
                            android:text="Thanks" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            app:cardBackgroundColor="@color/colorCardViewBackground"
            app:cardCornerRadius="@dimen/extraTiny"
            app:cardElevation="@dimen/extraTiny"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/dimen_product"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@color/colorPrimary"
                                android:padding="@dimen/extraTiny" />

                            <ProgressBar
                                android:layout_width="@dimen/huge"
                                android:layout_height="@dimen/huge"
                                android:layout_centerInParent="true"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/small">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCourierName"
                                        style="@style/TextSemiBoldSizeRegular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:text="@string/courier_name"
                                        android:textColor="@color/colorBlack" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/appTvCorDetails"
                                        style="@style/TextRegularSizeSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/details"
                                        android:textColor="@color/colorRed" />
                                </LinearLayout>

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/appTvCity"
                                    style="@style/TextRegularSizeMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:maxLines="1"
                                    android:text="City"
                                    android:textColor="@color/colorBlack" />

                                <android.support.v7.widget.AppCompatRatingBar
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small"
                                    android:numStars="5"
                                    android:rating="0"
                                    android:stepSize="0.5"
                                    android:theme="@style/RatingBarTheme" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginRight="@dimen/small"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/name"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/medium_text" />

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/small"
                                android:text="@string/name"
                                android:textColor="@color/colorCheckBoxActive" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/extraLarge"
                                android:layout_height="@dimen/extraLarge"
                                android:padding="@dimen/small"
                                app:srcCompat="@drawable/ic_menu_contact_us" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_no"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/medium_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                style="@style/TextRegularSizeRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/small"
                                android:text="@string/mobile_no"
                                android:textColor="@color/colorCheckBoxActive" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRatingBar
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="0.5"
                            android:theme="@style/RatingBarTheme" />

                        <android.support.v7.widget.AppCompatButton
                            style="@style/ButtonTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/extraLarge"
                            android:layout_gravity="center"
                            android:padding="@dimen/small"
                            android:text="Ratting" />


                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
